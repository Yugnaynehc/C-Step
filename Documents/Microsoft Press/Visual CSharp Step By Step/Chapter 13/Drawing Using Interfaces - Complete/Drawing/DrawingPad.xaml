<Window x:Class="Drawing.DrawingPadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Drawing Pad" Height="300" Width="585" Name="DrawingPad" AllowDrop="True">
    <Grid>
        <Canvas HorizontalAlignment="Stretch" Name="drawingCanvas" VerticalAlignment="Stretch" MouseLeftButtonDown="drawingCanvas_MouseLeftButtonDown" MouseRightButtonDown="drawingCanvas_MouseRightButtonDown">
            <Canvas.Background>
                <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                    <GradientStop Color="Black" Offset="0" />
                    <GradientStop Color="White" Offset="1" />
                </LinearGradientBrush>
            </Canvas.Background>
        </Canvas>
    </Grid>
</Window>
