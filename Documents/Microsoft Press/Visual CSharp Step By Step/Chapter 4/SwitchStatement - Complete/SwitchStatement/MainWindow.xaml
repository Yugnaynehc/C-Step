<Window x:Class="SwitchStatement.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="switch Statement" Height="300" Width="300">
    <Grid>
    <TextBox Height="90" Margin="16,17,16,0" Name="source" VerticalAlignment="Top" AcceptsReturn="True" AcceptsTab="True" TextWrapping="WrapWithOverflow" />
    <TextBox Height="90" Margin="16,0,16,24" Name="target" VerticalAlignment="Bottom" AcceptsReturn="False" IsReadOnly="True" TextWrapping="WrapWithOverflow" />
    <Button HorizontalAlignment="Left" Margin="16,113,0,125" Name="copy" Width="75" Click="copyClick">Copy</Button>
  </Grid>
</Window>
